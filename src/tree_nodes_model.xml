<root>
    <TreeNodesModel>
        <Action ID="HelloWorld">
            <description>
                <p>
                    Log a message that says "Hello, world!".
                </p>
            </description>
        </Action>
        <Action ID="DelayedMessage">
            <description>
                <p>
                    After some time, log a message that says "Hello, world!".
                </p>
            </description>
            <input_port name="delay_duration" default="5">
                The duration, in seconds, to wait before logging a message
            </input_port>
        </Action>
        <Action ID="SetupMTCWaveHand">
            <!-- The web app will use this tag to organize Behaviors in the sidebar. -->
            <MetadataFields>
                <Metadata subcategory="Task Planning"/>
            </MetadataFields>
            <description>
                <p>
                    Wave hello with the end-effector
                </p>
            </description>
            <inout_port name="task" default="{mtc_task}">MoveIt Task Constructor task.</inout_port>
        </Action>
        <Action ID="SetupMtcPlaceFromPose">
            <!-- The web app will use this tag to organize Behaviors in the sidebar. -->
            <MetadataFields>
                <Metadata subcategory="Task Planning"/>
            </MetadataFields>
            <description>
                <p>
                    Adds the stages to describe a place motion to the MTC task.
                </p>
            </description>
            <input_port name="place_pose" default="{place_pose}">
                The StampedPose used in this MTC stage
            </input_port>
            <inout_port name="task" default="{mtc_task}">MoveIt Task Constructor task.</inout_port>
        </Action>
        <Action ID="SetupMtcPickFromPose">
            <!-- The web app will use this tag to organize Behaviors in the sidebar. -->
            <MetadataFields>
                <Metadata subcategory="Task Planning"/>
            </MetadataFields>
            <description>
                <p>
                    Adds the stages to describe a pick motion to the MTC task.
                </p>
            </description>
            <input_port name="pick_pose" default="{pick_pose}">
                The StampedPose used in this MTC stage
            </input_port>
            <inout_port name="task" default="{mtc_task}">MoveIt Task Constructor task.</inout_port>
        </Action>
    </TreeNodesModel>
</root>
